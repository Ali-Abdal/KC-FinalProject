<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context=".Verification" >

    <TextView
        android:id="@+id/textView11"
        android:layout_width="372dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="280dp"
        android:text="A verification message has been sent to your email. Please verify your email"
        android:textAlignment="center"
        android:textColor="#333232"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="#6DD1FE"
        android:indeterminateTintMode="src_atop"

        android:layout_marginTop="50dp"/>

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/buttonver"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/buttonbacklight"
        android:backgroundTint="#000000"
        android:text="continue"
        android:textColor="#FFFFFF" />

</LinearLayout>