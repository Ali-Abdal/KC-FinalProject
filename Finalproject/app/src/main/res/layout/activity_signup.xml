<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    tools:context=".Signup" >

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="149dp"
        android:layout_height="108dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="129dp"
        app:srcCompat="@drawable/updateimg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="403dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/screenshot_2022_09_05_154408"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:text="Email"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etemailLogin"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="3dp"

            android:backgroundTint="#00FF0000"
            android:ems="10"
            android:hint="example@gmail.com"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Full name"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00FF0000"
            android:ems="10"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etaddresssignup"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00FF0000"
            android:ems="10"
            android:hint="Area, Block, Street , Home num"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Age"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etphonesignup"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00FF0000"
            android:ems="10"
            android:hint="Age"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etpasssignup"
            android:layout_width="285dp"
            android:layout_height="47dp"
            android:layout_marginStart="57dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#00FF0000"
            android:ems="10"
            android:hint="password"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="622dp"
        android:text="You already have an account ?"
        android:textColor="#333232"
        android:textSize="12sp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btnsignin"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="575dp"
        android:background="@drawable/buttonbacklight"
        android:backgroundTint="#000000"
        android:text="Sign in"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/btnlogin2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="622dp"
        android:text="Log in"
        android:textColor="#333232"
        android:textSize="12sp"
        android:textStyle="bold" />

    <ProgressBar
        android:id="@+id/progressBarsignup"
        style="?android:attr/progressBarStyle"
        android:layout_width="81dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="164.5dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="164.5dp"
        android:indeterminate="true"
        android:indeterminateTint="#6DD1FE"
        android:indeterminateTintMode="src_atop"
        android:visibility="invisible" />

</RelativeLayout>