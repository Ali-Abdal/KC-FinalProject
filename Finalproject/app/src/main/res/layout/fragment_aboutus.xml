<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.aboutus.AboutusFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="418dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Full name"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPasswordLogin"
            android:layout_width="299dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/textbacktest"
            android:ems="10"
            android:hint="Full name"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Address"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etaddresssignup"
            android:layout_width="299dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/textbacktest"
            android:ems="10"
            android:hint="Area, Block, Street , Home num"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Phone number"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etphonesignup"
            android:layout_width="299dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/textbacktest"
            android:ems="10"
            android:hint="Phone number"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="Password"
            android:textColor="#333232"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etpasssignup"
            android:layout_width="299dp"
            android:layout_height="47dp"
            android:layout_gravity="center"
            android:layout_marginTop="3dp"
            android:background="@drawable/textbacktest"
            android:ems="10"
            android:hint="password"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:textColorHint="#74A3A0A0"
            android:textSize="14sp" />


    </LinearLayout>
</RelativeLayout>